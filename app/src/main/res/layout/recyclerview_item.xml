<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/pic_item">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="title"
        android:textColor="@color/hint_foreground_material_light"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_title"
        android:layout_marginLeft="6dp"
        android:layout_toEndOf="@+id/item_title"
        android:layout_toRightOf="@+id/item_title"
        android:textSize="16sp"
        tools:text="5-20" />

    <ImageView
        android:id="@+id/item_imageview_meizi"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/item_title"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/meizi" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_imageview_meizi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_tv_dianzhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pic_dianzhan"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="100" />

        <TextView
            android:id="@+id/item_tv_chaping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/pic_chaping"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="100" />

        <TextView
            android:id="@+id/item_tv_tucao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="吐槽：10" />

        <ImageView
            android:id="@+id/item_imageview_shezi"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pic_threepoint" />
    </LinearLayout>
</RelativeLayout>